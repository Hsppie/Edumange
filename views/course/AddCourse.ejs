     <section class="content">
         <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12"></div>
            </div>
             <div class="row">
                <div class="col-md-12 col-sm-12">
                     <div class="card card-outline card-info">
                        <div class="card-header">
                            <h3 class="card-title">Book Category Form</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i> </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i></button>
                            </div>
                        </div>
                        <div class="card-body">
                            <form action="/courses/createCourse" method="post">
                                <div class="row">
                                    <div class="col-md-12 ">
                                        <label for="">Course Name <span class="text text-danger">*</span> </label>
                                        <input type="text" name="courseName" class="form-control" required />
                                    </div>
                                
                                    <div class="col-md-12">
                                        <label for="">Course Description </label>
                                        <textarea name="description" class="form-control" placeholder="Write here..."></textarea>
                                    </div>
                                     <div class="col-md-12">
                                        <label for="">Credit Hours </label>
                                        <input type="text" name="creditHours" class="form-control" required />
                                    </div>
                                    <div class="col-md-12">
                                        <label for="">Course Units </label>
                                        <select class="form-select form-control" name="unitname" multiple aria-label="multiple select example">
                                            <option selected>Open this select Course Unit</option>
                                            <% courseUnits.forEach(units => { %>
                                             <option value="<%= units.unitname %>"><%= units.unitname %></option>
                                            <% }) %>
                                        </select>
                                    <div class="col-md-12" style="padding-top: 15px; margin-top: 15px;">
                                        <button type="Submit" class="btn btn-primary">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                     </div>
                </div>
             </div>
         </div>
     </section>
                                            