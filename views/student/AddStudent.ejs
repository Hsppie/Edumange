 <div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"><button class="pull-left backbtn"
                        title="Back" onclick="goBack()"><i
                            class="fa fa-arrow-left"
                            aria-hidden="true"> </i></button> Student </h1>
                <script>
                function goBack() { window.history.back();}
                </script>

            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/dashboard/kpi">Home</a></li>
                    <li class="breadcrumb-item active">New Student</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12"></div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="card card-outline card-info collapsed-card">
                    <div class="card-header">
                        <h3 class="card-title">Student Registration Form</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool"
                                data-card-widget="collapse"><i
                                    class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">

                        <form action="/student/addStudent" method="POST">
                            <!-- Basic Information -->
                            <div class="row">
                                <div class="col-md-4 col-sm-4">
                                    <label for="firstname">First Name:</label>
                                    <input type="text" class="form-control"
                                        id="firstname"
                                        name="firstname" required><br><br>
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <label for="lastname">Last Name:</label>
                                    <input type="text" class="form-control"
                                        id="lastname"
                                        name="lastname" required><br><br>
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <label for="birthDate">Birth Date:</label>
                                    <input type="date" class="form-control"
                                        id="birthDate"
                                        name="birthDate" required><br><br>
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <label for="gender">Gender:</label>
                                    <select id="fees" class="form-control"
                                        name="gender" required>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select><br><br>
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <label for="admission">Admission:</label>
                                    <input type="text" class="form-control"
                                        id="admission"
                                        name="admision" required><br><br>
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <label for="semester">Semester:</label>
                                    <input type="text" class="form-control"
                                        id="semester"
                                        name="semester" required><br><br>
                                </div>
                                <div class="col-md-4 col-sm-4">

                                    <label for>Course <span
                                            class="text text-danger">*</span></label>
                                    <select name="courseName"
                                        class="custom-select rounded-0"
                                        id="exampleSelectRounded0">
                                        <option value>Select Course</option>
                                        <% courses.forEach(course => { %>
                                        <option value="<%= course.courseName %>"><%=
                                            course.courseName %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <label for="contact">Contact:</label>
                                    <input type="text" class="form-control"
                                        id="contact"
                                        name="contact"><br><br>
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <label for="email">Email:</label>
                                    <input type="email" class="form-control"
                                        id="email"
                                        name="email" required><br><br>
                                </div>
                            </div>
                            <div class="col-md-12"
                                style="padding-top: 15px; margin-top: 15px;">
                                <button type="Submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
